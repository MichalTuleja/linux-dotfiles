# ---- Wofi config ----
# Show apps by default (Rofi: -show drun)
show=drun

prompt=Search…
sort_order=alphabetical      # alphabetical list before you type
filter_rate=50               # snappier filtering
no_custom_entry=true

# Match your Rofi settings
insensitive=true            # Rofi: case-sensitive: false
allow_images=true           # Rofi: show-icons: true (drun pulls GTK icon theme)
image_size=32

# Size & placement (Rofi: width: 30; location: 0)
width=30%
lines=12
columns=1
location=center             # same as numeric 0
# height can be fixed OR use dynamic_lines=true to shrink to results
# height=50%
# dynamic_lines=true

# Mouse behavior (closest to Rofi’s mouse-accept-entry)
single_click=true

# Look & feel
gtk_dark=true
style=~/.config/wofi/style.css

# Matching behavior (optional; default is 'contains')
matching=contains

# Scrollbar visibility (Rofi: scrollbar: true)
hide_scroll=false
